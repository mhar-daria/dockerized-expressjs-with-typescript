{
    "extension": [
        "ts"
    ],
    "reporter": "list",
    "timeout": "60000",
    "recursive": true,
    "spec": [
        "test/**/*.spec.ts"
    ],
    "node-option": [
        "experimental-specifier-resolution=node",
        "loader=ts-node/esm"
    ],
    "require": [
        "./test/hooks.ts"
    ],
    "fullTrace": true,
    "bail": true,
    "exit": true
}